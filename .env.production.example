# =============================================
# FIXELO - Production Environment Variables
# =============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================

# -----------------------------------------
# Domain Configuration
# -----------------------------------------
DOMAIN=fixelo.app
NEXT_PUBLIC_APP_URL=https://fixelo.app
ACME_EMAIL=admin@fixelo.app

# -----------------------------------------
# Database (PostgreSQL)
# -----------------------------------------
POSTGRES_USER=fixelo
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_DB=fixelo_prod

# -----------------------------------------
# Authentication (NextAuth)
# -----------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here

# -----------------------------------------
# Stripe (Payments)
# -----------------------------------------
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# -----------------------------------------
# Email (SMTP)
# -----------------------------------------
SMTP_HOST=my.mailbux.com
SMTP_PORT=587
SMTP_USER=no-reply@fixelo.app
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=no-reply@fixelo.app

# -----------------------------------------
# SMS (Twilio) - Optional
# -----------------------------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------
# Push Notifications (VAPID) - Optional
# -----------------------------------------
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# -----------------------------------------
# Google Maps - Optional
# -----------------------------------------
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# -----------------------------------------
# Traefik Dashboard Auth - Optional
# -----------------------------------------
# Generate with: htpasswd -nb admin yourpassword
TRAEFIK_AUTH=admin:$$apr1$$xyz$$hashhere
